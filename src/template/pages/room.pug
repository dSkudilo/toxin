extends ../layout/main
block content 
 
    main.room 
        .room__imgs.flex.jcc
            .room__bigger
                img(src="./src/assets/img/room/first.png", alt="room").room__big
            .room__less
                img(src="./src/assets/img/room/third.png", alt="room").room__small
                img(src="./src/assets/img/room/third.png", alt="room").room__small

        .room__detalis.container.flex.sb
            .room__main
                .room__info.flex.sb
                    .room__about
                        h3.subtitle-big Сведения о номере
                        ul.room__intelligence
                            li.room__information.flex.ac 
                                img(src="./src/assets/img/room/insert_emoticon.svg", alt="smile")
                                .ml10
                                    h4.grey-text <strong>Комфорт</strong>
                                    p.grey-text Шумопоглощающие стены
                            li.room__information.flex.ac 
                                img(src="./src/assets/img/room/location_city.svg", alt="city")
                                .ml10
                                    h4.grey-text <strong>Удобство</strong>
                                    p.grey-text Номер оснащён камином
                            li.room__information.flex.ac 
                                img(src="./src/assets/img/room/whatshot.svg", alt="smile")
                                .ml10
                                    h4.grey-text <strong>Уют</strong>
                                    p.grey-text Номер оснащён камином
                    .room__impressions
                        h3.subtitle-big Впечатления от номера
                        .room__diagram.flex
                            .circle
                                .circle__border
                                p.circle__number 260
                                p.circle__vote голоса
                            ul.room__appraisals
                                li.grey-text.mark-li.room__great Великолепно
                                li.grey-text.mark-li.room__well Хорошо
                                li.grey-text.mark-li.room__satisfactory Удовлетворительно 
                                li.grey-text.mark-li.room__disappointment Разочарован
                .room__feedback 
                    .flex.sb.ac
                        h3.subtitle-big Отзывы посетителей номера
                        span.grey-small 2 отзыва
                    ul.comments 
                        li.comments__comment.flex
                            .comments__who 
                                img(src="./src/assets/img/room/first.png", alt="avatar").comments__avatar
                                .form-checkbox.comments__like
                                    <label>
                                        input(type="checkbox").real-checkbox
                                        span.btn-like 2
                                    </label>
                            .comments__main.ml10 
                                h4.grey-text <strong>Мурад Сарафанов</strong>
                                p.grey-text.mb10 5 дней назад
                                p.grey-text Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.
                        
                        
                        
                        li.room__comment.flex
                            .room__who 
                                img(src="./src/assets/img/room/third.png", alt="avatar").room__avatar
                                .form-checkbox.room__like
                                    <label>
                                        input(type="checkbox").real-checkbox
                                        span.btn-like 111
                                    </label>
                            .comment__main.ml10 
                                h4.grey-text <strong>Патрисия Стёклышкова</strong>
                                p.grey-text.mb10 Неделю назад
                                p.grey-text Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент
                .room__other.flex.sb
                    .room__rules
                        h4.subtitle-big Правила
                        ul.room__list 
                            li.grey-text.mark-li Нельзя с питомцами
                            li.grey-text.mark-li Без вечеринок и мероприятий
                            li.grey-text.mark-li Время прибытия — после 13:00,<br> а выезд до 12:00
                    .cancel
                        h4.subtitle-big.mb20 Отмена
                        p.grey-text Бесплатная отмена в течение 48 ч. После <br> этого при отмене не позднее чем за 5 дн. до <br> прибытия вы получите полный возврат за <br> вычетом сбора за услуги.
            
            .room__conditions
                .room__order    
                    .info-room.flex.sb.ac 
                        h4.number-room № 888 
                            span.luxury-room Люкс
                        p.text <strong>9 990₽</strong> в сутки
                    .flex.sb.ac
                        .search__date.form-control#calDrop 
                            label(for="timeOne") Прибытие
                            button.form-button(id="timeOne")(data-drop) ДД.ММ.ГГГГ
                        .search__date.form-control 
                            label(for="timeTwo") Выезд
                            button.form-button(id="timeTwo")(data-drop) ДД.ММ.ГГГГ 
                    .guests.form-control#drop
                        label(for="guests") Гости
                        button.form-button(data-drop) Сколько гостей
                    ul.room__details 
                        li.room__detail.flex.sb.grey-text   
                            p.grey-text 9 990₽ x 4 суток
                            p.grey-text 39 960₽
                        li.room__detail.flex.sb.grey-text   
                            p.grey-text Сбор за услуги: скидка 2 179₽
                            p.grey-text 0₽
                        li.room__detail.flex.sb.grey-text   
                            p.grey-text Сбор за дополнительные<br> услуги
                            p.grey-text 300₽
                    .room__total.flex 
                        h4.subtitle-big Итого
                        .pointer
                        p.subtitle-big 38 081₽
                    button.purple-big Забранировать 
